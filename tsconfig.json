{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      // "@*": ["./*"],
      "@api/*": ["./api/*"],
      "@components/*": ["./components/*"],
      "@constants/*": ["./constants/*"],
      "@helpers/*": ["./helpers/*"],
      "@hocs/*": ["./hocs/*"],
      "@hooks/*": ["./hooks/*"],
      "@modals/*": ["./modals/*"],
      "@modules/*": ["./modules/*"],
      "@router/*": ["./router/*"],
      "@services/*": ["./services/*"],
      "@stitches/*": ["./stitches/*"],
      "@store/*": ["./store/*"],
      "@theme/*": ["theme/*"],
      "@typings/*": ["./typings/*"],
      "@test/*": ["./test/*"],
      "@i18n/*": ["./i18n"]
    }
  },
  "references": [{ "path": "./tsconfig.node.json" }],
  "include": ["next-env.d.ts", "."],
  "exclude": ["node_modules"]
}
