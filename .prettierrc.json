{
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "printWidth": 120,
  "arrowParens": "avoid",
  "endOfLine": "auto",
  "importOrder": [
    "<THIRD_PARTY_MODULES>",

    "@api/(.*)$",
    "@assets/(.*)$",
    "@components/(.*)$",
    "@constants/(.*)$",
    "@helpers/(.*)$",
    "@hooks/(.*)$",
    "@layouts/(.*)$",
    "@locales/(.*)$",
    "@modules/(.*)$",
    "@services/(.*)$",
    "@shared/(.*)$",
    "@recoil/(.*)$",
    "@theme/(.*)$",
    "@types/(.*)$",
    "@utils/(.*)$",

    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
